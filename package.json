{
  "name": "open-mushaf-native",
  "main": "expo-router/entry",
  "version": "v2",
  "author": "Adel Benyahia <adelpro@gmail.com>",
  "repository": "https://github.com/adelpro/open-mushaf-native",
  "homepage": "https://github.com/adelpro/open-mushaf-native",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "scripts": {
    "start": "expo start",
    "start:prod": "expo start --no-dev --minify",
    "start:clean": "expo start --reset-cache",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "lint": "eslint .",
    "scan:web": "expo start & npx react-scan@latest localhost:8081",
    "lint:fix": "eslint . --fix",
    "doctor": "npx expo-doctor",
    "clean:ios": "cd ios && xcodebuild clean -workspace PocketPal.xcworkspace -scheme PocketPal -configuration Debug && cd ..",
    "clean:android": "cd android && ./gradlew clean && cd ..",
    "clean": "yarn clean:ios && yarn clean:android",
    "android:build:preview": "eas build -p android --profile preview",
    "android:build:production": "eas build -p android --profile production",
    "android:build:preview:local": "eas build -p android --profile preview --local --output builds/app-preview.apk",
    "android:build:production:local": "eas build -p android --profile production --local --output builds/app-production.aab",
    "android:submit:preview": "eas submit -p android --profile preview",
    "web:build": "npx expo export -p web",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "keywords": [
    "expo",
    "react-native",
    "mushaf",
    "quran",
    "warsh",
    "open-source",
    "islam",
    "muslim"
  ],
  "license": "MIT",
  "dependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@expo-google-fonts/amiri": "^0.2.3",
    "@expo-google-fonts/tajawal": "^0.2.3",
    "@expo/vector-icons": "^14.0.3",
    "@gorhom/bottom-sheet": "^5",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-community/slider": "4.5.5",
    "@react-native-picker/picker": "2.9.0",
    "@react-native/assets-registry": "^0.75.4",
    "@react-navigation/native-stack": "^7.0.0",
    "date-fns": "^4.1.0",
    "expo": "~52.0.38",
    "expo-application": "~6.0.1",
    "expo-av": "~15.0.1",
    "expo-build-properties": "~0.13.1",
    "expo-constants": "~17.0.8",
    "expo-font": "~13.0.4",
    "expo-image": "~2.0.6",
    "expo-keep-awake": "~14.0.3",
    "expo-linking": "~7.0.5",
