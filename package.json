{
  "name": "open-mushaf-native",
  "main": "expo-router/entry",
  "version": "v3",
  "author": "Adel Benyahia <adelpro@gmail.com>",
  "repository": "https://github.com/adelpro/open-mushaf-native.git",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "scripts": {
    "start": "expo start",
    "start:prod": "expo start --no-dev --minify",
    "start:clear": "expo start --reset-cache",
    "commit": "git-cz",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "web:export": "npx expo export -p web",
    "web:serve": "npx serve dist",
    "test": "jest --watchAll",
    "lint": "eslint .",
    "scan": "expo start & npx react-scan@latest localhost:8081",
    "lint:fix": "eslint . --fix",
    "doctor": "npx expo-doctor",
    "android:build:preview": "eas build -p android --profile preview",
    "android:build:production": "eas build -p android --profile production",
    "android:build:preview:local": "eas build -p android --profile preview --local --output builds/app-preview.apk",
    "android:build:production:local": "eas build -p android --profile production --local --output builds/app-production.aab",
    "android:submit:preview": "eas submit -p android --profile preview",
    "prepare": "husky",
    "predeploy": "cross-env EXPO_NO_REACT_COMPILER=1 expo export -p web --clear",
    "deploy:firebase": "yarn run predeploy && firebase deploy --only hosting"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@expo-google-fonts/amiri": "^0.2.3",
    "@expo-google-fonts/tajawal": "^0.2.3",
    "@expo/vector-icons": "^14.0.3",
    "@gorhom/bottom-sheet": "^5.1.2",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-community/slider": "4.5.5",
    "@react-native-picker/picker": "2.9.0",
    "@react-native/assets-registry": "^0.75.4",
    "@react-navigation/native": "^7.0.0",
    "@react-navigation/native-stack": "^7.0.0",
    "cross-env": "^7.0.3",
    "expo": "~52.0.18",
    "expo-application": "~6.0.1",
    "expo-av": "~15.0.1",
    "expo-build-properties": "~0.13.1",
    "expo-checkbox": "~4.0.0",
    "expo-font": "~13.0.1",
    "expo-image": "~2.0.3",
    "expo-keep-awake": "~14.0.1",
    "expo-linking": "~7.0.2",
    "expo-router": "~4.0.19",
    "expo-secure-store": "~14.0.0",
    "expo-splash-screen": "~0.29.18",
    "expo-status-bar": "~2.0.0",
    "expo-system-ui": "~4.0.6",
    "expo-updates": "~0.27.4",
    "expo-web-browser": "~14.0.1",
    "i": "^0.3.7",
    "npm": "^10.9.2",
    "react": "18.3.1",
    "react-compiler-runtime": "^19.0.0-beta-aeaed83-20250323",
    "react-dom": "18.3.1",
    "react-native": "0.76.7",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-htmlview": "^0.17.0",
    "react-native-reanimated": "~3.16.1",
    "react-native-recoil-persist": "^0.0.6",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-svg": "15.8.0",
    "react-native-toast-message": "^2.2.1",
    "react-native-toggle-input": "^1.0.12",
    "react-native-web": "~0.19.13",
    "recoil": "^0.7.7"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.3.12",
    "@types/react-native-htmlview": "^0.16.5",
    "@types/react-test-renderer": "^18.0.7",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-react-compiler": "^19.0.0-beta-aeaed83-20250323",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-expo": "~8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-compiler": "^19.0.0-beta-aeaed83-20250323",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.5",
    "jest": "^29.2.1",
    "jest-expo": "~52.0.2",
    "metro": "^0.81.0",
    "prettier": "^3.3.3",
    "react-native-svg-transformer": "^1.5.0",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "private": true
}
