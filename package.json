{
  "name": "open-mushaf-native",
  "main": "expo-router/entry",
  "version": "v1",
  "author": "Adel Benyahia <adelpro@gmail.com>",
  "repository": "https://github.com/adelpro/open-mushaf-native.git",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "scripts": {
    "start": "expo start",
    "start:prod": "expo start --no-dev",
    "start:clear": "expo start --reset-cache",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "lint": "expo lint",
    "lint:fix": "eslint . --fix",
    "doctor": "npx expo doctor",
    "build:preview:android": "eas build -p android --profile preview",
    "build:production:android": "eas build -p android --profile production",
    "build:local:preview:android": "eas build -p android --profile preview --local --output builds/android/",
    "update:preview:android": "eas update -p android --channel preview",
    "prepare": "husky"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@expo-google-fonts/amiri": "^0.2.3",
    "@expo/vector-icons": "^14.0.3",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-picker/picker": "2.7.5",
    "@react-native/assets-registry": "^0.75.4",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "expo": "~51.0.37",
    "expo-application": "~5.9.1",
    "expo-av": "~14.0.7",
    "expo-checkbox": "~3.0.0",
    "expo-font": "~12.0.10",
    "expo-image": "~1.13.0",
    "expo-keep-awake": "~13.0.2",
    "expo-linking": "~6.3.1",
    "expo-router": "~3.5.23",
    "expo-secure-store": "~13.0.2",
    "expo-splash-screen": "~0.27.6",
    "expo-status-bar": "~1.12.1",
    "expo-system-ui": "~3.0.7",
    "expo-updates": "~0.25.27",
    "expo-web-browser": "~13.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-htmlview": "^0.17.0",
    "react-native-reanimated": "~3.10.1",
    "react-native-recoil-persist": "^0.0.6",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-web": "~0.19.10",
    "recoil": "^0.7.7"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "@types/react-native-htmlview": "^0.16.5",
    "@types/react-test-renderer": "^18.0.7",
    "eslint": "^8.57.0",
    "eslint-config-expo": "^7.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.5",
    "jest": "^29.2.1",
    "jest-expo": "~51.0.3",
    "metro": "^0.80.12",
    "prettier": "^3.3.3",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.3.3"
  },
  "private": true
}
