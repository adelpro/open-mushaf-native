{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "incremental": true,
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/*.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "metro.config.js"
  ],
  "exclude": ["node_modules"]
}
